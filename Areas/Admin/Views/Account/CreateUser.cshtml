@model Video_Library.Areas.Admin.Models.ViewModel.CreateUserViewModel
@{
    ViewData["Title"] = "CreateUser";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-body register-card-body">
                    <p class="login-box-msg">Register a new membership</p>
                    <h1 class="text-center text-success">@ViewBag.message</h1>
                    <div asp-validation-summary="All"></div>
                    <p class="text-center text-success"></p>
                    <form action="CreateUser" method="post">
                        <div class="form-group">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-for="FirstName" placeholder="First Name">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-for="LastName" placeholder="Last Name">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-user"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="input-group mb-3">
                           <select class="form-control" asp-for="Gender">
                               <option value="0">--Select--</option>
                               <option value="Male">Male</option>
                               <option value="Female">Female</option>
                               <option value="Other">Other</option>
                           </select>
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-hand-o-down"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="input-group mb-3">
                                <input type="email" class="form-control" asp-for="Email" placeholder="Email">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-envelope"></span>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="input-group mb-3">
                                <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            <div class="input-group mb-3">
                                <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm password">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-lock"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            <div class="input-group mb-3">
                                <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Phone Number">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-phone"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">

                            <div class="col-4">
                                <button type="submit" class="btn btn-primary btn-block">Register</button>
                            </div>

                        </div>
                    </form>
                </div>
                <!-- /.form-box -->
            </div>
        </div>
    </div>
</div>


